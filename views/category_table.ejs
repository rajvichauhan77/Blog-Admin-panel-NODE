<%- include("header") %>

<div class="page-wrapper">
  <div class="page-breadcrumb">
    <div class="row">
      <div class="col-12 d-flex no-block align-items-center">
        <h4 class="page-title">Category Table</h4>
        <div class="ml-auto text-right">
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item active" aria-current="page">Category</li>
            </ol>
          </nav>
        </div>
      </div>
    </div>
  </div>

  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title m-b-0">Category Table</h5>
          </div>
          <table class="table">
            <thead>
              <tr>
                <th>No</th>
                <th>Name</th>
                <th>Image</th>
                <th>Actions</th> <!-- New Column -->
              </tr>
            </thead>
            <tbody>
              <% categories.map((cat, index) => { %>
                <tr>
                  <td><%= index + 1 %></td>
                  <td><%= cat.name %></td>
                  <td>
                    <% if (cat.image) { %>
                      <img src="<%= cat.image %>" width="100" />
                    <% } else { %>
                      No image
                    <% } %>
                  </td>
                  <td>
                  <a href="/category/edit/<%= cat._id %>" class="mr-4"><i class=" fas fa-pencil-alt font-20"></i></a>
                  <a href="/category/delete/<%= cat._id %>" class="mr-4" ><i class="fas fa-trash-alt text-danger font-20"></i></a>
                </td>

                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include("footer") %>
